;--------------------------------------------------------
[Camera]
 ;Camera starting position: Usually 0 for both
startx = 0  ;não altere.
starty = 0 ;a posição da câmera no início da rodada.
  
boundleft = -1001;limites esquerdo e direito do palco.
boundright = 1001;sempre igual.
boundhigh = -200 ; defaults to -25 and 0 respectively
boundlow = 0

verticalfollow = .4

 
floortension = 20
;para a camera nao segui-lo defini-lo para um valor alto, ;algo em torno de 90.
;Se você gosta da câmera para mover no entanto, defini-lo ;para 20. 
 
tension = 50


;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -70          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 0            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 70 ;(NÃO altere esses valores)
p2starty = 0
p2startz = 0
p2facing = -1

;--- Common ---
 ;não deve ser diminuída. Se você quiser fazer um estádio ;muito grande, você precisa aumentar esses valores.

leftbound  = -2000 ;Left bound (x-movement)
rightbound =  2000 ;Right bound
topbound  =  0     ;Top bound (z-movement)
botbound  =  0     ;Bottom bound

;--------------------------------------------------------
[Scaling] ;escala
 ;No need to change these values
topz     = 0       ;Top z-coordinate for scaling
botz     = 50      ;Bottom z-coordinate for scaling
topscale = 1       ;Scale to use at top
botscale = 1.2     ;Scale to use at bottom

;--------------------------------------------------------
[Bound] ;limites
 ;Distance from left/right edge of screen that player can move to
 ;Typically 15
screenleft = 15    ;Dist from left of screen that player can move to
screenright = 15   ;Right edge
;os jogos Capcom geralmente têm um valor de 24, por ;exemplo. Você deve usar um valor mais alto se você não ;quer que os personagens para chegar perto das fronteiras ;do palco, porque não há paredes, por exemplo.

;--------------------------------------------------------
[StageInfo]
 ;define nivel do solo.
zoffset = 220

 ;nao altere.
autoturn = 1

 ;nao é necessario alterar.
resetBG = 1
hires = 1
DoubleRes = 4; Quando um é a metade da ampliação de visualização camada para afiar

;--------------------------------------------------------
[Shadow]
 ;escurecimento é a intensidade da sombra. 
  ;Sua escala vai de 0 a sombra invisível para 256 a sombra ;escura. Defaults to 128 if omitted.

intensity = 96 ; invisível profundidade da sombra opaca 0-255

 ;range from 0 (lightest) to 255 (darkest).
 ;Defaults to 0,0,0 if omitted.
 ;Valor vai de 0 a 256 de cada vez. Por exemplo, se você ;quer uma espécie de sombra vermelho, você definir o valor ;para 256,0,0.
color = 0,0,0


yscale = 0

fade.range = 0,0

;--------------------------------------------------------
[Reflection] ;Reflexão
 ;Intensity of reflection (from 0 to 256). Set to 0 to have no  -0 a -255
 ;reflection. Defaults to 0.
intensity = 95

